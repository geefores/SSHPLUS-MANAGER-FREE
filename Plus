#!/bin/bash
clear

# --- Root Execution Check ---
[[ "$(whoami)" != "root" ]] && {
    echo -e "\033[1;33m[\033[1;31mError\033[1;33m] \033[1;37m- \033[1;33mYou must run this as root\033[0m"
    rm $HOME/Plus > /dev/null 2>&1
    exit 0
}

# --- De-obfuscated Variables ---
# Original: _lnk=$(echo 't1:e#n.5s0ul&p4hs$s.0729t9p$&8i&&9r7827c032:3s'| sed -e 's/[^a-z.]//ig'| rev)
server_url="script.sshplus.net"

# Original: _Ink=$(echo '/3×u3#s87r/l32o4×c1a×l1/83×l24×i0b×'|sed -e 's/[^a-z/]//ig')
lib_path="/usr/local/lib"

# Original: _1nk=$(echo '/3×u3#s×87r/83×l2×4×i0b×'|sed -e 's/[^a-z/]//ig')
sys_lib_path="/usr/lib"

cd $HOME

# --- Progress Bar Function ---
fun_bar () {
    command_to_run[0]="$1"
    command_to_run[1]="$2"
    
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${command_to_run[0]} -y > /dev/null 2>&1
        ${command_to_run[1]} -y > /dev/null 2>&1
        touch $HOME/fim
    ) > /dev/null 2>&1 &
    
    tput civis # Hide cursor
    echo -ne "  \033[1;33mPLEASE WAIT \033[1;37m- \033[1;33m["
    while true; do
        for((i=0; i<18; i++)); do
            echo -ne "\033[1;31m#"
            sleep 0.1s
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -e "\033[1;33m]"
        sleep 1s
        tput cuu1 # Move cursor up
        tput dl1  # Delete line
        echo -ne "  \033[1;33mPLEASE WAIT \033[1;37m- \033[1;33m["
    done
    echo -e "\033[1;33m]\033[1;37m -\033[1;32m OK !\033[1;37m"
    tput cnorm # Show cursor
}

# --- Verify Key/List Function ---
function verif_key () {
    # Note: 'krm' variable was defined but seemingly unused in the logic provided.
    chmod +x "$lib_path/list" > /dev/null 2>&1
    [[ ! -e "$lib_path/list" ]] && {
        echo -e "\n\033[1;31mINVALID FILE LIST!\033[0m"
        rm -rf $HOME/Plus > /dev/null 2>&1
        sleep 2
        clear
        exit 1
    }
}

# --- System Verification & Setup ---
function systemverify() {
    # Backup SSH config
    cp /etc/ssh/sshd_config "/etc/ssh/sshd_back_principal_$(date +%d-%m-%Y_%H%M%S).conf" > /dev/null 2>&1
    
    # Create shortcut 'h' for menu
    echo "/bin/menu" > /bin/h
    chmod +x /bin/h > /dev/null 2>&1
    
    # Download credits
    rm -rf "$HOME/credits"* > /dev/null 2>&1
    wget -qO "$HOME/credits" https://raw.githubusercontent.com/geefores/SSHPLUS-MANAGER-FREE/master/credits > /dev/null 2>&1
    
    # Create 'sshplus' shortcut/installer
    echo 'wget https://raw.githubusercontent.com/geefores/SSHPLUS-MANAGER-FREE/master/Plus; chmod +x Plus; ./Plus' > /bin/sshplus
    chmod +x /bin/sshplus > /dev/null 2>&1
    
    # Download menu versions
    for version in V3 V2 V1; do
        wget -qO /bin/menu$version https://raw.githubusercontent.com/geefores/SSHPLUS-MANAGER-FREE/master/Install/Skin_Plus/menu$version/Install
        chmod +x /bin/menu$version > /dev/null 2>&1
    done
}

# --- Main Interface ---
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
tput setaf 7 ; tput setab 4 ; tput bold ; printf '%40s%s%-12s\n' "WELCOME TO SSHPLUS MANAGER" ; tput sgr0
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
echo ""
echo -e "             \033[1;31mATTENTION! \033[1;33mTHIS SCRIPT WILL !\033[0m"
echo ""
echo -e "\033[1;31m• \033[1;33mINSTALL A SET OF SCRIPTS AS TOOLS\033[0m" 
echo -e "\033[1;33m  FOR NETWORK, SYSTEM, AND USER MANAGEMENT\033[0m"
echo ""
echo -e "\033[1;32m• \033[1;32mTIP! \033[1;33mUSE A DARK THEME IN YOUR TERMINAL FOR\033[0m"
echo -e "\033[1;33m  BETTER VISUALIZATION AND EXPERIENCE!\033[0m"
echo ""
echo -e "\033[1;31m≠×≠×≠×≠×≠×≠×≠×≠×[\033[1;33m • \033[1;32mBY CRAZY VPN\033[1;33m •\033[1;31m ]≠×≠×≠×≠×≠×≠×≠×≠×\033[0m"
echo ""

# --- Confirmation ---
read -p "$(echo -e "\033[1;36mDO YOU WISH TO CONTINUE \033[1;31m? \033[1;33m[Y/N]:\033[1;37m ")" -e -i s resp
# Note: Checks for 'n' or 'N'.
[[ $resp = @(n|N) ]] && rm $HOME/Plus && exit 0

# Extract key parts (variables _lnk2 and _lnk1 were defined but logic depends on $key which wasn't clearly passed in snippet)
# Assuming $key is defined in environment or passed earlier.
_lnk2=$(echo "$key"|awk -F : '{print $2}')
_lnk1=$(echo "$key"|awk -F : '{print $1}')

echo -e "\n\033[1;36mVERIFYING... \033[1;37m File list\033[0m"
rm "$lib_path/list" > /dev/null 2>&1
wget -P "$lib_path" https://raw.githubusercontent.com/geefores/SSHPLUS-MANAGER-FREE/master/Install/list > /dev/null 2>&1
verif_key

echo -e "\n\033[1;32mFILE LIST VALID!\033[1;32m"
sleep 1s
echo ""

# --- User Database Handling ---
[[ -f "$HOME/usuarios.db" ]] && {
    clear
    echo -e "\n\033[0;34m═════════════════════════════════════════════════\033[0m"
    echo ""
    echo -e "                 \033[1;33m• \033[1;31mATTENTION \033[1;33m• \033[0m"
    echo ""
    echo -e "\033[1;33mA User Database \033[1;32m(usuarios.db) \033[1;33mWas" 
    echo -e "Found! Do you want to keep it to preserve the"
    echo -e "simultaneous connection limits? Or do you want"
    echo -e "to create a new database?\033[0m"
    echo -e "\n\033[1;37m[\033[1;31m1\033[1;37m] \033[1;33mKeep Current Database\033[0m"
    echo -e "\033[1;37m[\033[1;31m2\033[1;37m] \033[1;33mCreate New Database\033[0m"
    echo -e "\n\033[0;34m═════════════════════════════════════════════════\033[0m"
    echo ""
    tput setaf 2 ; tput bold ; read -p "Option ?: " -e -i 1 optiondb ; tput sgr0
} || {
    # Create DB from /etc/passwd users with UID >= 500
    awk -F : '$3 >= 500 { print $1 " 1" }' /etc/passwd | grep -v '^nobody' > $HOME/usuarios.db
}

# If Option 2 selected, overwrite DB
[[ "$optiondb" = '2' ]] && awk -F : '$3 >= 500 { print $1 " 1" }' /etc/passwd | grep -v '^nobody' > $HOME/usuarios.db

clear
tput setaf 7 ; tput setab 4 ; tput bold ; printf '%35s%s%-18s\n' " AWAITING INSTALLATION" ; tput sgr0
echo ""
echo ""
echo -e "          \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mUPDATING SYSTEM \033[1;33m[\033[1;31m!\033[1;33m]\033[0m"
echo ""
echo -e "    \033[1;33mUPDATES USUALLY TAKE A WHILE!\033[0m"
echo ""

# --- System Update Function ---
fun_attlist () {
    apt-get update -y
    [[ ! -d /usr/share/.plus ]] && mkdir /usr/share/.plus
    echo "crz: $(date)" > /usr/share/.plus/.plus
}
fun_bar 'fun_attlist'

clear
echo ""
echo -e "          \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mINSTALLING PACKAGES \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
echo ""
echo -e "\033[1;33mSOME PACKAGES ARE EXTREMELY NECESSARY!\033[0m"
echo ""

# --- Package Installation Function ---
inst_pct () {
    packages=("bc" "screen" "nano" "unzip" "lsof" "netstat" "net-tools" "dos2unix" "nload" "jq" "curl" "figlet" "python3" "python-pip")
    for prog in ${packages[@]}; do
        apt install $prog -y
    done
    pip install speedtest-cli
}
fun_bar 'inst_pct'

# Configure Firewall
[[ -f "/usr/sbin/ufw" ]] && ufw allow 443/tcp ; ufw allow 80/tcp ; ufw allow 3128/tcp ; ufw allow 8799/tcp ; ufw allow 8080/tcp

clear
echo ""
echo -e "              \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mFINALIZING \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
echo ""
echo -e "      \033[1;33mCOMPLETING FUNCTIONS AND DEFINITIONS! \033[0m"
echo ""

# Execute the downloaded list file with decoded arguments
fun_bar "$lib_path/list $server_url $lib_path $sys_lib_path $key"

systemverify
clear
echo ""
cd $HOME
echo -e "        \033[1;33m • \033[1;32mINSTALLATION COMPLETE\033[1;33m • \033[0m"
echo ""
echo -e "\033[1;31m \033[1;33mMAIN COMMAND: \033[1;32mmenu\033[0m"
echo -e "\033[1;33m MORE INFORMATION \033[1;31m(\033[1;36mTELEGRAM\033[1;31m): \033[1;37m@geefores\033[0m"

# Cleanup
rm $HOME/Plus && cat /dev/null > ~/.bash_history && history -c
